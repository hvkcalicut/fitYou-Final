{
    "version": 2,
    "builds": [
      { "src": "/server/**", "use": "@vercel/node" },
      { "src": "/client/**", "use": "@vercel/static-build" }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/api/$1",
        "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
  }
  